            android:layout_height="wrap_content"
            android:text="点击测试4"
            android:onClick="onClick" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击测试5"
            android:onClick="onClick" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击测试6"
            android:onClick="onClick" />

    </LinearLayout>

</RelativeLayout>
